html(ng-app="Momentum")
  head
    title Angular Momentum

    // import the bootstrap stylesheets
    link(href='/lib/bootstrap/css/bootstrap.css', rel='stylesheet')
    link(href='/lib/bootstrap/css/bootstrap-responsive.css', rel='stylesheet')

    // import the css styles we created in the /css/ folder
    link(href='/css/styles.css', rel='stylesheet')

    // import the jquery, bootstrap, and Angular JS libraries
    script(src='/lib/jquery-1.9.1.js') 
    script(src='/lib/bootstrap/js/bootstrap.js')
    script(src='/lib/angular-1.1.5/angular.js')

    // import the javascript code we created in the /js/ folder
    script(src='/js/app.js', type='text/javascript')
    script(src='/js/message.js', type='text/javascript')
    script(src='/js/directives.js', type='text/javascript')

  body
    .container
      .row
        h1 Angular Momentum Lab 3
        div Hello, world!
        //Make the background color red and the height 50px for this div only.  Separate multiple rules with a ';'
        div(style='background-color: red; height: 50px;')
          | Enter something: 
          // Create an input element with id equals 'my-input'
          input#my-input
        //Create a dashed border for this div only   
        div(style='border-weight: 2px; border-color: black; border-style: dashed;')
          button(onclick='alert(document.getElementById("my-input").value)') Click me!
        //Create a solid border for this div only
        div(style='border-weight: 5px; border-color: blue; border-style: solid;')
          button(onclick='alert($("#my-input").val())') I use jQuery!

